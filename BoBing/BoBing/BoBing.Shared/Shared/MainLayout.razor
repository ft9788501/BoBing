@inherits LayoutComponentBase

<Layout SideWidth="0"
        IsPage="true"
        ShowGotoTop="true"
        ShowCollapseBar="true"
        IsFullSide="true"
        IsFixedHeader="true"
        IsFixedFooter="false"
        ShowFooter="false"
        UseTabSet="false"
        AdditionalAssemblies="new[] { GetType().Assembly }">
    <Header>
        <span class="ms-3 flex-sm-fill d-sm-block">2021安卓博饼房间</span>
        <div class="flex-fill d-sm-none">
        </div>
        <div class="layout-drawer" @onclick="@(e => IsOpen = !IsOpen)"><i class="fa fa-gavel"></i></div>
    </Header>
    <Side>
        <div class="layout-banner">
            <div class="layout-title">
            </div>
        </div>
        <div class="layout-user">
            <div class="layout-title">
                <span>@LocalParticipant.Name</span>
            </div>
        </div>
    </Side>
    <Main>
        <CascadingValue Value="this" IsFixed="true">
            @Body
        </CascadingValue>
    </Main>
    <NotFound>
        <p>Sorry, there's nothing at this address.</p>
    </NotFound>
</Layout>

<Drawer Height="80%" Placement="Placement.Top" @bind-IsOpen="@IsOpen" IsBackdrop="true">
    <img class="img-fluid"
         style="width: 100%; display: block; max-width: 100%; height: auto;"
         src="_content/BoBing.Shared/images/bobing_rule.jpg" />
</Drawer>

<Toast />
<Dialog />
<PopoverConfirm />
<Message />
<SweetAlert />
